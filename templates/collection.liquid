<div class="container pt-5 collection-page">
    <h1 style="text-align: center">{{collection.title}} - collection</h1>

    {% paginate collection.products by 20 %}
    <div class="row">
        {% for product in collection.products %}
            <div class="item col-12 col-md-6 col-lg-4 my-3">
                <a href="{{product.url}}">
                <img src="{{product.featured_image | img_url: '600x'}}" alt="" class="img-fluid">
                <div class="caption">
                    <h3>{{product.title}}</h3>
                    <h3 class="price">{{product.price | money }}</h3>
                </div>
                </a>
            </div>
        {% endfor %}
    </div>

    <div id="pagination">{{ paginate | default_pagination }}</div>
    
    {% endpaginate %}
</div>